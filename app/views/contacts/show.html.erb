<header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <span class="name">Need to make a change to your friend?</span>
               </div>

           <h2> Contact: <%= @contact.name %> </h2> <br>
            <br>
           <h2> Phone Number <%= @contact.phone_number %> </h2> <br>
            <br>

                      <%= link_to "Edit", 
                                  edit_contact_path(@contact), :class => 'btn btn-default btn-xs' %>
                      <%= link_to "Delete",
                                  contact_path(@contact),
                                  :method => :delete,
                                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                  :class => 'btn btn-xs btn-danger' %>

                            </div>
            </div>
        </div>
        


</header>
