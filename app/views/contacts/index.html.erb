<header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <span class="name">These are your friends?  Really?</span>
               </div>
               <h2> Contacts </h2>
            <% @contacts.each do |contact| %>

                Name: <%= contact.name  %> <br>
                Number: <%= contact.phone_number %> <br>
            <%= link_to "Edit", 
                        edit_contact_path(contact), :class => 'btn btn-default btn-xs' %>
            <%= link_to "Delete",
                        contact_path(contact),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %> <br>

            <% end %>                

                    
                </div>
            </div>
        </div>
        


</header>


