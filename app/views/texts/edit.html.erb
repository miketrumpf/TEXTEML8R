<header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <i class="fa fa-mobile fa-5x"></i>
                    <div class="intro-text">
                        <span class="name">Schedule a message to be sent out l8r</span>
                    </div>
                </div>
            </div>
        </div>

  <%= form_for @text do |f| %>
  <%= f.label :content %><br>
  <%= f.text_area :content, :cols => "40", :rows => "10" %><br>

  <div>
    <%=f.label :contact_id %>
    <%= f.collection_select(:contact_id, current_user.contacts, :id, :name) %>
  </div>

  <br>

  <div class="form-group">
    <%= f.label :time, "", :class => 'control-label col-lg-12' %>
    <!-- Rails expects time_select when dealing with ActiveRecord forms -->
    <div class="col-lg-12">Time
      <%= time_select :appointment, :time, {:class => "form-control" } %>
    </div>
    <div class="col-lg-12">Date
      <%= date_select :appointment, :time, {:class => "form-control" } %>
    </div>  
  </div>




  <%= f.submit %>


<% end %>


  
</header>




